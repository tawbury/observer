###########################################################################
# .env.shared - Observer 공통 환경변수
# 모든 환경(local, docker, k8s)에서 공유하는 설정
# 경로(path)와 시크릿(secret)은 포함하지 않음
###########################################################################

###########################################################################
# Runtime
###########################################################################
TZ=Asia/Seoul
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
OBSERVER_STANDALONE=1

###########################################################################
# Service
###########################################################################
SERVICE_PORT=8000

###########################################################################
# Database (non-secret)
###########################################################################
DB_PORT=5432
DB_NAME=observer
# DB_HOST → 환경별 (.env.local=localhost, .env.container=postgres)
# DB_USER, DB_PASSWORD → config/.env (로컬/Docker) 또는 SealedSecret (K8s)

###########################################################################
# KIS API
###########################################################################
KIS_IS_VIRTUAL=false
# KIS_BASE_URL 미지정: kis_auth.py가 KIS_IS_VIRTUAL에 따라 자동 선택
#   Real:    https://openapi.koreainvestment.com:9443
#   Virtual: https://openapivts.koreainvestment.com:29443
# KIS_WEBSOCKET_URL 미지정: 동일 로직
#   Real:    ws://ops.koreainvestment.com:21000
#   Virtual: ws://ops.koreainvestment.com:31000

# KIS Credentials → config/.env (로컬/Docker) 또는 SealedSecret (K8s)
# KIS_APP_KEY, KIS_APP_SECRET, KIS_HTS_ID

###########################################################################
# Track A/B Control
###########################################################################
TRACK_A_ENABLED=true
TRACK_B_ENABLED=true
# TRACK_B_DEBUG=false

###########################################################################
# Market
###########################################################################
MARKET_CODE=kr

###########################################################################
# Logging (환경별 override 가능)
###########################################################################
LOG_LEVEL=INFO
LOG_FORMAT=json

###########################################################################
# Phase 15 - Experimental (기본값: 비활성)
###########################################################################
TRADING_ENABLED=false
PHASE15_SYMBOL=005930
PHASE15_SOURCE_MODE=mock
PHASE15_POLL_INTERVAL_SEC=1.0
