###########################################################################
# env.template — .env 재생성용 템플릿
# 사용: 이 파일을 복사해 .env 를 만들고, 아래 값을 로컬/서버에서 직접 채우세요.
# .env 는 커밋하지 마세요. deploy.ps1 은 env.template 키로 로컬 .env 를 검증한 뒤
# observer-deploy/.env 와 observer/secrets/.env 둘 다 서버에 업로드합니다.
###########################################################################

###########################################################################
# KIS API Credentials (Real Account)
###########################################################################
KIS_APP_KEY=your_app_key_here
KIS_APP_SECRET=your_app_secret_here
KIS_IS_VIRTUAL=false

###########################################################################
# KIS API HTS ID (Customer ID)
###########################################################################
# HTS ID는 KIS Developers 고객 ID로, 체결통보, 나의 조건 목록 확인 등에 사용됩니다.
# KIS 홈페이지 > 마이페이지에서 확인 가능한 HTS ID를 입력하세요.
KIS_HTS_ID=your_hts_id_here

###########################################################################
# Observer Configuration
###########################################################################
OBSERVER_STANDALONE=1
PYTHONPATH=/app/src:/app
OBSERVER_DATA_DIR=/app/data/observer
OBSERVER_LOG_DIR=/app/logs
OBSERVER_SYSTEM_LOG_DIR=/app/logs/system
OBSERVER_MAINTENANCE_LOG_DIR=/app/logs/maintenance
OBSERVER_CONFIG_DIR=/app/config
KIS_TOKEN_CACHE_DIR=/app/secrets/.kis_cache
OBSERVER_ENV_FILE=/app/secrets/.env

###########################################################################
# Track A/B Control
###########################################################################
TRACK_A_ENABLED=true
TRACK_B_ENABLED=true

###########################################################################
# Database Configuration
###########################################################################
DB_HOST=postgres
DB_USER=postgres
DB_PASSWORD=observer_db_pwd
DB_NAME=observer
DB_PORT=5432

