###########################################################################
# .env.local - Observer 로컬 개발 환경
#
# 시크릿(KIS 키, DB 비밀번호 등)은 config/.env 에서 관리
# 이 파일은 경로와 개발용 설정만 포함
###########################################################################

###########################################################################
# Deployment Mode
###########################################################################
OBSERVER_DEPLOYMENT_MODE=dev

###########################################################################
# Runtime
###########################################################################
PYTHONPATH=./src
OBSERVER_ENV_FILE=config/.env

###########################################################################
# Paths (project_root 기준 상대경로)
# paths.py 기본값이 /opt/platform/... 이므로 로컬에서 반드시 override 필요
###########################################################################
OBSERVER_DATA_DIR=./data
OBSERVER_LOG_DIR=./logs
OBSERVER_SYSTEM_LOG_DIR=./logs/system
OBSERVER_MAINTENANCE_LOG_DIR=./logs/maintenance
OBSERVER_CONFIG_DIR=./config
OBSERVER_SNAPSHOT_DIR=./data/universe
KIS_TOKEN_CACHE_DIR=./data/cache

###########################################################################
# Database (로컬 postgres)
###########################################################################
DB_HOST=localhost

###########################################################################
# Logging (개발용: 텍스트 포맷, DEBUG 레벨)
###########################################################################
LOG_LEVEL=DEBUG
LOG_FORMAT=text
